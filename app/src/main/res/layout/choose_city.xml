<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#00e1ff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择城市"
            android:layout_centerInParent="true"
            android:textSize="25sp"
            android:textColor="#ffffff"/>
        <Button
            android:id="@+id/cancel"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:text="取消"
            android:textColor="#ffffff"
            android:background="#00ffa6"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="#2608ff00">
        <EditText
            android:id="@+id/city_editor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#8b00ff48"
            android:layout_centerInParent="true"
            android:paddingLeft="20dp"
            android:hint="中文/拼音/首字母"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/lv_cities"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
       <firstdemo.xll.com.myfindhome.views.SideView
           android:id="@+id/sv_cities"
           android:layout_width="40dp"
           android:layout_height="match_parent"
           android:background="#8700e6ff"
           android:layout_gravity="right"/>
    </FrameLayout>


</LinearLayout>