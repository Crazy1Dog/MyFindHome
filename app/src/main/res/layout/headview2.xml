<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="#fff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#fff"
            android:drawableTop="@drawable/xinfang_selector"
            android:layout_margin="2dp"
            android:textSize="15sp"
            android:textColor="#b9acac"
            android:text="新房"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#fff"
            android:drawableTop="@drawable/ershou_selector"
            android:layout_margin="2dp"
            android:textSize="15sp"
            android:textColor="#b9acac"
            android:text="二手房"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#fff"
            android:drawableTop="@drawable/zufang_selector"
            android:layout_margin="2dp"
            android:textSize="15sp"
            android:textColor="#b9acac"
            android:text="租房"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#fff"
            android:drawableTop="@drawable/zixun_selector"
            android:layout_margin="2dp"
            android:textSize="15sp"
            android:textColor="#b9acac"
            android:text="资讯"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#fff"
            android:drawableTop="@drawable/youhui_selector"
            android:layout_margin="2dp"
            android:textSize="15sp"
            android:textColor="#b9acac"
            android:text="打折优惠"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#fff"
            android:drawableTop="@drawable/kaipan_selector"
            android:layout_margin="2dp"
            android:textSize="15sp"
            android:textColor="#b9acac"
            android:text="最新开盘"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#fff"
            android:drawableTop="@drawable/fangdai_selector"
            android:layout_margin="2dp"
            android:textSize="15sp"
            android:textColor="#b9acac"
            android:text="房贷计算"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#fff"
            android:drawableTop="@drawable/gengduo_selector"
            android:layout_margin="2dp"
            android:textSize="15sp"
            android:textColor="#b9acac"
            android:text="更多"/>



    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#d4cccc"/>

</LinearLayout>